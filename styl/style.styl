.browser
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0

.browserColumn
    overflow            hidden
    position            relative

.browserColumnTable
    display             table
    width               100%
    height              100%

.browserRow
    display             block
    padding-left        6px
    padding-right       6px
    white-space         nowrap
    cursor              pointer

    & .git
        float           right
        padding-top     1px

.rowNameInput
    font-family         font
    font-size           15px
    border              none
    white-space         nowrap
    position            absolute
    left                30px
    right               30px
        
.browserSearch
    padding-right       12px
    float               right

.browserImageContainer
    position            relative
    padding-left        frameWidth

.browserImage
    max-width           600px
    max-height          600px
    border              1px solid
    
.browserFileIcon
    
    text-align          left
    display             inline-block
    width               24px
    opacity             0.5

.openFileIcon
    display             inline-block
    width               24px
    margin-top          -3px
    
.browserStatusIcon
    
    text-align          right
    display             inline-block
    width               24px
    opacity             0.5
    position            absolute
    right               6px
    
octicon(char)
    font-family         octicons
    content             char

awesome(char)
    font-family         FontAwesome
    content             char
    
unicode(char)
    font-family         Sans-Serif
    content             char
    
.git-changed-icon:before
    awesome('\f040')
    
.git-added-icon:before
    awesome('\f067')
    
.git-dirs-icon:before
    awesome('\f044')

.history-icon:before
    awesome('\f141')
    
.file-icon:before
    octicon('\f011')
    
.folder-icon:before 
    octicon('\f016')
    
.noon-icon:before
