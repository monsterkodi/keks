.browser
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0

.browserColumn
    overflow            hidden
    position            relative
    line-height         1.25

.browserColumnTable
    display             table
    width               100%
    height              100%

.browserRow
    display             block
    padding-left        6px
    padding-right       6px
    white-space         nowrap
    cursor              pointer

    & .git
        float           right
        padding-top     1px

.rowNameInput
    font-size           18px
    border              none
    white-space         nowrap
    position            absolute
    left                30px
    right               30px
        
.browserSearch
    padding-right       12px
    float               right

.browserImageContainer
    position            relative
    padding             frameWidth

.browserFileInfo    
    position            relative
    padding             frameWidth

.fileInfoIcon
    text-align          center
    &:before
        font-size       200px

.fileInfoFile
    text-align          center
    display             block
    font-size           28px
    
.fileInfoData
    margin              auto
    & th
        text-align      right
    & td
        text-align      left

.browserImage
    max-width           600px
    max-height          600px
    border              1px solid
    
.browserFileIcon
    
    text-align          left
    display             inline-block
    margin-right        0.3em
    opacity             0.5

.openFileIcon
    display             inline-block
    width               24px
    margin-top          -3px
    
.browserStatusIcon
    
    text-align          right
    display             inline-block
    width               24px
    opacity             0.5
    position            absolute
    right               6px
    
