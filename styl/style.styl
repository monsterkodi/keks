#titlebar
    position    absolute
    left        0
    right       0
    top         0
    height      titlebarHeight
    pointer-events none
    
.titlebar-title
    opacity             0
    pointer-events none
    
.crumb
    font-size   14px
    line-height titlebarHeight
    position    absolute
    text-align  center

#crumbs
    position    absolute
    left        0
    right       0
    top         0  
    height      titlebarHeight
    display     block
    background  frameColor
    
